#!/bin/bash

# Define the endpoint
URL="https://pokeapi.co/api/v2/pokemon/pikachu"

# Make the request
# -s : Silent mode (no progress bar)
# -f : Fail silently on server errors (so we can catch them in the 'else' block)
# -o : Output the result to a file
if curl -s -f "$URL" -o data.json; then
    echo "Success: Data saved to data.json"
else
    # If the command failed, log the error with a timestamp
    echo "$(date): Failed to fetch data for Pikachu" >> errors.txt
fi
