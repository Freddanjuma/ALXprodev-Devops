#!/bin/bash

# Define the list of Pokemon in lowercase as required by the checker
pokemon_list=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")

# Loop through each Pokemon in the list
for pokename in "${pokemon_list[@]}"; do
    echo "Fetching data for $pokename..."
    
    # Fetch data from the API
    # -s: Silent mode
    # -o: Output to file
    curl -s "https://pokeapi.co/api/v2/pokemon/$pokename" -o "${pokename}.json"
    
    # Check if the file was created successfully
    if [ -f "${pokename}.json" ]; then
        echo "Successfully saved to ${pokename}.json"
    else
        echo "Failed to save ${pokename}.json"
    fi
    
    # Add a 2-second delay to handle rate limiting
    sleep 2
done
